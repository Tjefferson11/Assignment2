{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Hello Coba Coba.",
    "width": 500,
    "height": 100,
    "data": {"url": "dataset/listings_calendar.csv"},
    "transform": [{"filter": "datum.Year_review > 2016"}],
    "mark": {"type": "bar",
            "clip": true},
    "encoding": {
      "x": {
        "field": "last_review",
        "type": "temporal",
        "title": "Date",
        "axis": {"grid": false}
      },
      "y": {
        "field": "price",
        "type": "quantitative",
        "title": "Price",
        "scale": {"domain": [0,1000]},
        "axis": {"grid": false}
      },
      "color": {
        "field": "neighbourhood_group",
        "type": "nominal",
        "legend": null
      },
      "row": {
        "field": "neighbourhood_group",
        "type": "nominal",
        "title": "Borough"
      }
    }
  }