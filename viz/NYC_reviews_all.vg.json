{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Tjefferson11/Homework10/main/listings_calendar.csv"},
  "width": 400,
  "height": 200, 
  "transform": [
        {"filter": "datum.Year_review > 2016"
        }],
  "background": "#fee8c8",
  "vconcat": [
    { "width": 400,
      "mark": "area", 
      "encoding": {
        "x": {
          "field": "last_review",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": ""}
        },
        "y": {"aggregate": "count",
              "title": "Review Count Zoomed",
              "scale": {"domain": [0,1]},
              "stack": "normalize"},
        "color": {
        "field": "neighbourhood_group",
        "type": "nominal",
        "scale": {"scheme": "darkred"}} 
      }
    },
    {
      "width": 400,
      "height": 60,
      "mark": "area",
      "params": [
        {"name": "brush", 
          "select": {"type": "interval", 
                    "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {"field": "last_review", 
              "type": "temporal",
              "timeUnit": "yearmonth",
              "title": "Date"},
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false,
                    "title":"Review Count"}
        },
        "color": {
        "field": "neighbourhood_group",
        "type": "nominal"
      }
      }
    }
  ]
}
