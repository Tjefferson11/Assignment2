{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Tjefferson11/Assignment2/main/dataset/listings_calendar.csv"},
  "transform": [
        {"filter": "datum.Year_review > 2016"
        }],
  "vconcat": [
    {
      "width": 300,
      "height: 150,
      "background": "transparent",
      "mark": "area",
      "encoding": {
        "x": {
          "field": "last_review",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": ""}
        },
        "y": {"aggregate": "count",
              "title": "Review Count Zoomed",
              "scale": {"domain": [0,1]},
              "stack": "normalize"},
        "color": {
        "field": "neighbourhood_group",
        "type": "nominal",
        "scale": {"scheme": "category20b"}} 
      }
    },
    {
      "width": 480,
      "height": 60,
      "mark": "area",
      "params": [
        {"name": "brush", 
          "select": {"type": "interval", 
                    "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {"field": "last_review", 
              "type": "temporal",
              "timeUnit": "yearmonth",
              "title": "Date"},
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false,
                    "title":"Review Count"}
        },
        "color": {
        "field": "neighbourhood_group",
        "type": "nominal"
      }
      }
    }
  ]
}
